#
# shell snippet to set BK_REPOSITORY

if test -z "$BK_REPOSITORY" -a -f $HOME/.sourcemgr.cf ; then
	BK_REPOSITORY=$(/usr/share/sourcemgr/getvar $HOME/.sourcemgr.cf BK_REPOSITORY)
fi
if test -z "$BK_REPOSITORY" ; then
	BK_REPOSITORY=$(/usr/share/sourcemgr/getvar /etc/sourcemgr.cf BK_REPOSITORY)
fi
if test -z "$BK_REPOSITORY" ; then
	cat <<_END >&2
$0: Error: You need to set the BK_REPOSITORY variable.
    Do this either as an environment variable,
        in ~/.sourcemgr.cf, or /etc/sourcemgr.cf
_END
	exit 1
fi
