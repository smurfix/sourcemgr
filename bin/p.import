#!/bin/sh

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- update externer Sourcen
       [ -d dest-directory ]
       [ -W origreleasename ]
       [ -V neworigreleasename ] | [ -v releasename ]
       [ -e (editiere Projektdatei) ]
       Kurzbeschreibung
END
exit 1
}

dir=$(/bin/pwd|sed -ne 's/^.*[\./]src\///p')
overs=base
nvers=base
vers=
edit=

   set -- $(getopt "d:V:W:hv:e" $*)
   if test $? != 0
   then
	   usage
   fi
   for i
   do
	   case "$i"
	   in
		   -h)
		       usage ;;
		   -d)
			   shift; dir="$1"; shift;;
		   -W)
			   shift; overs="$1"; shift;;
		   -V)
			   shift; nvers="$1"; shift;;
		   -e)
		       edit=y; shift;;
		   -v)
			   shift; vers="$1"; shift;;
		   --)
		       shift; break ;;
	   esac
   done

if test -z "$dir"; then usage; fi
if test -n "$*"; then usage; fi;
if test -z "$vers" ; then
vers=$(echo $nvers | \
	perl -pe '
	tr/-_/./; if(/([^-\.]*)\.(.*)/) {
		$base=$1; $wha=$2;
		$wha =~ tr/abcdefghijklmnopqrstuvwxyz/123456789/;
		s/\.0*([0-9])/.$1/g;
		$_ = "$base.$wha";
	}
' )
fi

export PRCS_REPOSITORY=/archiv/src/prcs PRCS_LOGQUERY=1
what=$(echo $dir | sed -e 's/\//_/g' -e 's/_*$//')

test -f $what.prj || prcs checkout -r $overs.@ $what $what.prj
prcs populate -f -d $what

if test -n "$edit" ; then
  vi $what.prj
elif grep -q 'New-Version-Log ""' $what.prj ; then
  if test -n "$*" ; then
	perl -p -i -e '
		BEGIN { $s="'"$*"'"; $s =~ s/"/'\''/g; }
	    s/\(New-Version-Log \"\"\)/(New-Version-Log "$s")/;
  ' $what.prj
elif jjj
fi

set -xe

prcs checkin -r $vers.@ $what </dev/tty

