#!/bin/sh

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- update externer Sourcen
       [ -d dest-directory ]
       [ -W origreleasename ]
       [ -V neworigreleasename ] | [ -v releasename ]
END
exit 1
}

dir=$(/bin/pwd|sed -ne 's/^.*\.src\///p')
overs=base
nvers=base
vers=

   set -- $(getopt "d:V:W:hv:" $*)
   if test $? != 0
   then
	   usage
   fi
   for i
   do
	   case "$i"
	   in
		   -h)
		       usage ;;
		   -d)
			   shift; dir="$1"; shift;;
		   -W)
			   shift; overs="$1"; shift;;
		   -V)
			   shift; nvers="$1"; shift;;
		   -v)
			   shift; vers="$1"; shift;;
	   esac
   done

if test -z "$dir"; then usage; fi
if test -z "$vers" ; then
vers=$(echo $nvers | \
	perl -pe '
	tr/-_/./; if(/([^-\.]*)\.(.*)/) {
		$base=$1; $wha=$2;
		$wha =~ tr/abcdefghijklmnopqrstuvwxyz/123456789/;
		s/\.0*([0-9])/.$1/g;
		$_ = "$base.$wha";
	}
' )
fi

export PRCS_REPOSITORY=/archiv/src/prcs PRCS_LOGQUERY=1
what=$(echo $dir | sed -e 's/\//_/g' -e 's/_*$//')

set -xe

test -f $what.prj || prcs checkout -r $overs.@ $what $what.prj
prcs populate -f -d $what

perl -p -i -e '
   s/\(New-Version-Log \"\"\)/(New-Version-Log "'Import\ $vers'")/ if "'$vers'" ne "";
   s/^  \((.*)\(\)\)/  ($1() :no-keywords)/;
' $what.prj

vi $what.prj

prcs checkin -r $vers.@ $what

