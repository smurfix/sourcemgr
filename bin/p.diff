#!/bin/sh

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- Diffs zur letzten Version
       [ -d dest-directory ]
       [ -b (suppress differences in blanks) ]
       [ -v fromreleasename ]
       [ -w toreleasename ]
END
exit 1
}

dir=$(/bin/pwd|sed -ne 's/^.*[\./]src\///p')
overs="-rnoris.@"
vers=
b=

   set -- $(getopt "d:bv:w:h" $*)
   if test $? != 0
   then
	   usage
   fi
   for i
   do
	   case "$i"
	   in
		   -h)
		       usage ;;
		   -b)
			   b="-b"; shift;;
		   -d)
			   shift; dir="$1"; shift;;
		   -v)
			   shift; overs="-r$1"; shift;;
		   -w)
			   shift; vers="-r$1"; shift;;
			--)
				shift; break ;;
	   esac
   done

if test -z "$dir"; then usage; fi

desc=$(echo $dir | sed -e 's/\//:/g' -e 's/:*$//')

if test -f "/usr/src/STATUS/checkout/$desc" ; then
    desc=$(sed  -e 's/[ 	].*//' "/usr/src/STATUS/checkout/$desc")
    what=$(echo $desc | sed -e 's/[:\/]/_/g' -e 's/_*$//')
else
    what=$(echo $dir | sed -e 's/\//_/g' -e 's/_*$//')
fi

export PRCS_REPOSITORY=/archiv/src/prcs PRCS_LOGQUERY=1

set -xe

prcs diff -f $overs $vers $what "$@" -- -u -b 2>&1 |less -p "^Index"

