#!/bin/sh
. /usr/share/sourcemgr/repository
. /usr/share/sourcemgr/fudge
export LANG=C
export DATEFUDGE_LIB

set -e
trap 'usage; exit 1' 0

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- update Bitkeeper from RCS
       [ -d package ] [ -v branch ] [ -w new_branch [ -p (public)] ]
       [ -n # (do a "bk push" every # imports; defaults to 100; 0=don't) ]
       [ -k (ignore CVS errors) ]
       [ -L (ignore lock) ]
       [ -r branch (CVS) ]  [ -t Tag the result ]
       [ -s (subshell instead of renametool) ] [ -S (no renametool) ]
       [ -e RCS fudge seconds (default:120) ]
       [ -q (quiet!) ] [ -W http://XXX/ (/viewcvs?rev+text/plain) UNTESTED ]
       [ -D (debug) ] [ -Z (no compression) ] [ -b # (try lock that often) ]
       [ -x SKIPSUBDIR,... ] [ -X (lokal) ]
       where

"where" is the path to the RCS repository.
END
}


PATH=/usr/src/STATUS/bin:/usr/local/bin:$PATH

dir=
vers=rcs
push=100
locdir=
rvers=
nvers=
ignore=
verbose=1
nolock=1
p=
run="$0.pl"
comp=-z3
diff=
rename=
shells=0
bg=
df=0
tag=

   eval set -- "$(getopt "hb:d:De:kLn:pqr:sSt:v:w:x:XZ" "$@")"
   for i
   do
	   case "$i"
	   in
		   -h)
		       exit 1 ;;
		   -Z)
		   	   shift; comp="" ;;
		   -s)
		   	   shift; shells=$(expr $shells + 1) ;;
		   -S)
		   	   shift; rename=1 ;;
		   -D)
			   shift; run="perl -d $(type -p "$0.pl")" ;;
		   -p)
		       shift; p="-p" ;;
		   -L)
		       shift; nolock=0 ;;
		   -t)
			   shift; tag="$1"; shift;;
		   -e)
			   shift; diff="$1"; shift;;
		   -k)
			   ignore=1; shift;;
		   -q)
			   verbose=""; shift;;
		   -d)
			   shift; dir="$1"; shift;;
		   -v)
			   shift; vers="$1"; shift;;
		   -w)
			   shift; nvers="$1"; shift;;
		   -x)
			   shift; skip="$1 $skip"; shift;;
		   -X)
			   shift; locdir=1 ;;
		   -r)
			   shift; rvers="$1"; shift;;
			-n)
				shift; push=$1 ; shift ;;
			-b)
				shift; bg=$1; shift ;;
			--)
				shift; break ;;
	   esac
   done

set -e

if test -z "$dir" ; then
	b.name > /tmp/bn.$$
	read dir overs < /tmp/bn.$$
	rm -f /tmp/bn.$$
fi

test -n "$1"
test -z "$2"
wo="$1"
what=$(echo $dir | sed -e 's/\//_/g' -e 's/_*$//')

trap 'usage; exit 1' 0

if test -n "$nvers"; then
	wset="-N $p -w $nvers"
	dv="-$nvers"
elif test -n "$vers" -a "$vers" != "-"; then
	dv="-$vers"
fi

trap '' 0
if shlock /var/lock/bcvs-$what$dv  ; then : ; else
	echo "$what$dv: Locked." >&2
	exit $nolock
fi

test -d /var/cache/cvs/bk/$what$dv || b.get -d $dir -v $vers $wset /var/cache/cvs/bk/$what$dv || true

export BKCVS_COMP=$comp
export BK_TARGET_REV="$rvers"
export BKCVS_SHELLS=$shells
if test -n "$nvers" ; then
	vers="$nvers"
	export BK_TARGET_NEW=1
fi
test -n "$diff" && test -z "$BKCVS_DIFF" && export BKCVS_DIFF=$diff
test -z "$BKCVS_PUSH" && export BKCVS_PUSH=$push
export BKCVS_NORENAME=1 # no gone files, so ...
test -n "$verbose" && export BK_VERBOSE=1
test -n "$ignore" && export BKCVS_IGNORE_ERROR=1
export BKCVS_LOCK=$bg
export BKCVS_SKIP=$skip
test -n "$tag" && export BKCVS_TAG=$tag
test -n "$locdir" && export BKCVS_LOCAL=1
exec $run "$wo" "$what$dv"
