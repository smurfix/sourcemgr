#!/bin/sh

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- Statusinfo eines Archivs
       [ -d dest-directory ]
       [ -v releasename ]
END
exit 1
}

dir=$(/bin/pwd|sed -ne 's/^.*[\./]src\///p')
vers=
longopt="-l"

   set -- $(getopt "d:v:hq" $*)
   if test $? != 0
   then
	   usage
   fi
   for i
   do
	   case "$i"
	   in
		   -h)
		       usage ;;
		   -d)
			   shift; dir="$1"; shift;;
		   -v)
			   shift; vers="-r$1"; shift;;
		   -q)
		   	   longopt="" ; shift ;;
		   --)
		       shift; break ;;
	   esac
   done

if test -z "$dir"; then usage; fi

export PRCS_REPOSITORY=/archiv/src/prcs PRCS_LOGQUERY=1
what=$(echo $dir | sed -e 's/\//_/g' -e 's/_*$//')

set -xe

prcs info $longopt $vers $what

