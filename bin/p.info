#!/bin/bash

set -e
trap 'usage; exit 1' 0

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- Statusinfo eines Archivs
       [ -d Paket ]
       [ -v releasename ]
       [ -q (quick status: release+date header) ]

"-v releasename.@" gibt nur den Status der neuesten Version aus.
Ohne -v-Option wird Info zu allen releasenamen ausgegeben.
END
}

vers=
longopt="-l"
dir=

   eval set -- "$(getopt "d:v:hq" "$@")"
   if test $? != 0
   then
	   exit 1
   fi
   for i
   do
	   case "$i"
	   in
		   -h)
		       exit 1 ;;
		   -d)
			   shift; dir="$1"; shift;;
		   -v)
			   shift; vers="-r$1"; shift;;
		   -q)
		   	   longopt="" ; shift ;;
		   --)
		       shift; break ;;
	   esac
   done

set -e
dir="$(p.name "$dir")"
desc=$(echo $dir | sed -e 's/\//:/g' -e 's/:*$//')

if test -f "/usr/src/STATUS/checkout/$desc" ; then
    desc=$(sed  -e 's/[ 	].*//' "/usr/src/STATUS/checkout/$desc")
    what=$(echo $desc | sed -e 's/[:\/]/_/g' -e 's/_*$//')
else
    what=$(echo $dir | sed -e 's/\//_/g' -e 's/_*$//')
fi

export PRCS_REPOSITORY=${PRCS_REPOSITORY:-/usr/src/archiv/prcs} PRCS_LOGQUERY=1

trap '' 0
set -x

prcs info -f $longopt $vers $what

