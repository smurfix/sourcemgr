#!/bin/sh

dir=$(/bin/pwd|sed -e 's/^.*\/usr\.src\///')
tag=$(echo $dir | sed -e 's/\//:/g' -e 's/:*$//')

xtg=$(while read a b c d ; do if test "$b" = "$dir" ; then echo $a; fi ; done < /usr/src/STATUS/build | sed -e 's/^r/v/')

if test -n "$xtg" ; then
	echo "Tag: $xtg"
	cvs tag -F $xtg
else
	echo Kein Tag für $tag gefunden\! >&2
fi

exit 0
