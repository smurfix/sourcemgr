#!/bin/sh

. /fd/STATUS

if test -d /mnt/usr/share/fuppu ; then
	echo "/mnt/usr/share gefunden, keine Installation."
else
	echo "/mnt/usr/share nicht gefunden => installiere."
PATH=/cd/usr/src/STATUS/bin:/bin:/sbin:/usr/sbin:/cd/bin:/cd/sbin:/cd/usr/bin:/cd/usr/sbin

set -ex

mkdir -p /mnt/usr ## just in case
mkdir -p /mnt/var/lib/packages
mkdir -p /mnt/usr/X11R6/bin

cd /mnt/usr
mkdir -p share/man share/info share/doc
rm -f man doc info
ln -s share/man man
ln -s share/doc doc
ln -s share/info info

set -e

cd /cd/usr/src
copyover /mnt /cd < STATUS/hosts/$name 2>&1 | tee -a /mnt/var/log/install

fi

exec /cd/usr/src/STATUS/bin/doinstall.3a
