#!/bin/sh
export BK_REPOSITORY=bk://bitkeeper.noris.de

set -e
trap 'usage; exit 1' 0

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- holt Sourcecode aus dem Archiv lokale Cache
       [ -v releasename ]
       [ -d Paket ]
END
}

vers=noris
dir=
optp=

   eval set -- "$(getopt "d:nv:w:h" "$@")"
   for i
   do
	   case "$i"
	   in
		   -h)
		       exit 1 ;;
		   -d)
			   shift; dir="$1"; shift;;
		   -v)
			   shift; vers="$1"; shift;;
			--)
				shift; break ;;
	   esac
   done

test -n "$dir"
test -z "$1"

trap '' 0

mod=p
if b.exists -v "$vers" $dir > /tmp/tf.$$ ; then : ; else
	echo >&2 "Problem: '$dir' Version '$vers' nicht bekannt."
	exit 1
fi
read what dv < /tmp/tf.$$
rm -f /tmp/tf.$$

if test -z "$what" ; then echo >&2 "'$dir' nicht gefunden" ; exit 1 ; fi
test -z "$dv" || dv="-$dv"

dir="$what$dv"

if test -d /var/cache/bk ; then
	c=/var/cache/bk/$what$dv
	if test -d "$c" ; then
		pw="$(pwd)"
		cd $c
		bk pull -q $BK_REPOSITORY/$what$dv 
		cd "$pw"
	else
		bk clone -q $BK_REPOSITORY/$what$dv $c
	fi
	echo "/var/cache/bk/$what$dv"
else
	echo "$BK_REPOSITORY/$what$dv"
fi

