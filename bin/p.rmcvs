#!/bin/sh

set -e
trap 'usage; exit 1' 0

usage() {
cat >&2 <<END
Usage: $(basename $0)  -- Löscht alle CVS-Unterverzeichnisse
END
}

   eval set -- "$(getopt "h" "$@")"
   for i
   do
	   case "$i"
	   in
		   -h)
		   	   exit 1 ;;
		   --)
			   shift; break ;;
	   esac
   done

trap '' 0
set -ex

find . -type d -name CVS -print0 | xargs -0 rm -rf
